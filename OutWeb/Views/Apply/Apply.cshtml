
@{
    ViewBag.Title = "桃園市主委盃3對3籃球鬥牛賽";
    ViewBag.BodyClass = "Apply";
    ViewBag.ContentClass ="pt-48 px-48 text-left";
}

<h4 class="title">
    <span class="underline">@ViewBag.Title</span>
    線上報名
</h4>

<ul class="list-unstyled apply-step">
    <li class="active"><em class="font-sp">1</em> 填寫資料</li>
    <li><em class="font-sp">2</em> 確認報名資料</li>
    <li><em class="font-sp">3</em> 完成報名</li>
</ul>

<form action="" class="form-signup">
    <fieldset class="clearfix my-16">
        <legend class="font-xl">報名資料</legend>
        <dl class="field">
            @* 檢查隊名，同組別的隊名不能相同 *@
            <dt class="col-md-1">隊名 <sup title="必填">*</sup></dt>
            <dd class="col-md-11">
                <input type="text" class="form-element" placeholder="必填" required>
            </dd>
        </dl>
        <section class="col-sm-6 pl-0">
            <dl class="field">
                <dt class="col-md-2">參賽組別 <sup title="必填">*</sup></dt>
                <dd class="col-md-10">
                    <select name="" id="" class="form-element" required>
                        <option value="0">請選擇組別</option>
                        <option value="1">男子組</option>
                        <option value="2">女子組</option>
                    </select>
                </dd>
            </dl>
            <dl class="field">
                <dt class="col-md-2">聯絡人 <sup title="必填">*</sup></dt>
                <dd class="col-md-10">
                    <input type="text" class="form-element" placeholder="必填" required>
                </dd>
            </dl>
            <dl class="field">
                <dt class="col-md-2">聯絡電話 <sup title="必填">*</sup></dt>
                <dd class="col-md-10">
                    <input type="tel" class="form-element" placeholder="必填" required>
                </dd>
            </dl>
        </section>
        <section class="col-sm-6 pr-0">
            <dl class="field">
                <dt class="col-md-2">教練</dt>
                <dd class="col-md-10">
                    <input type="text" class="form-element">
                </dd>
            </dl>
            <dl class="field">
                <dt class="col-md-2">E-mail <sup title="必填">*</sup></dt>
                <dd class="col-md-10">
                    <input type="email" class="form-element" placeholder="必填" required>
                </dd>
            </dl>
        </section>
        <dl class="field clear">
            <dt class="col-md-1">其他</dt>
            <dd class="col-md-11">
                <textarea rows="4" class="form-element" placeholder="如有隨行人員請在此登打">領隊：
助理教練：
管理人員：</textarea>
                <small class="text-danger">*如有隨行人員請在此登打</small>
            </dd>
        </dl>
    </fieldset>

    <fieldset class="clearfix my-16">
        <legend class="font-xl underline">隊伍資料</legend>
        @* 預設第一筆是隊長 *@
        <dl class="field team-item">
            <dt class="col-sm-1">隊長</dt>
            <dd class="col-sm-11">
                <div class="input-group team-data" title="姓名">
                    <label class="input-group-addon ti-user"></label>
                    <div class="input-group-box">
                        <input type="text" class="form-element" placeholder="請輸入姓名(必填)" required>
                    </div>
                </div>
                <div class="input-group team-data" title="身份證字號">
                    <label class="input-group-addon ti-id-badge"></label>
                    <div class="input-group-box">
                        <input type="text" class="form-element" placeholder="請輸入身份證字號(必填)" required>
                    </div>
                </div>
                <div class="input-group team-data" title="生日">
                    <label class="input-group-addon ti-gift"></label>
                    <div class="input-group-box">
                        <input type="date" class="form-element" placeholder="請輸入生日(必填)" required>
                    </div>
                </div>
                <button type="button" class="btn danger ti-trash">刪除</button>
            </dd>
        </dl>
        <dl class="field team-item">
            <dt class="col-sm-1">隊員1</dt>
            <dd class="col-sm-11">
                <div class="input-group team-data" title="姓名">
                    <label class="input-group-addon ti-user"></label>
                    <div class="input-group-box">
                        <input type="text" class="form-element" placeholder="請輸入姓名(必填)" required>
                    </div>
                </div>
                <div class="input-group team-data" title="身份證字號">
                    <label class="input-group-addon ti-id-badge"></label>
                    <div class="input-group-box">
                        <input type="text" class="form-element" placeholder="請輸入身份證字號(必填)" required>
                    </div>
                </div>
                <div class="input-group team-data" title="生日">
                    <label class="input-group-addon ti-gift"></label>
                    <div class="input-group-box">
                        <input type="date" class="form-element" placeholder="請輸入生日(必填)" required>
                    </div>
                </div>
                <button type="button" class="btn danger ti-trash">刪除</button>
            </dd>
        </dl>
        <footer class="offset-sm-1 team-item-add">
            <button type="button" class="btn success ti-plus">新增隊員</button>
        </footer>
    </fieldset>

    <footer class="submit-bar text-center">
        <button class="btn lg" type="button" onclick="location.href='Apply2'">我要報名</button>
        <a href="javascript:history.back()" class="btn success lg">取消</a>
    </footer>
</form>