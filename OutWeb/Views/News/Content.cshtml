<script>
    $(function () {
        //檔案下載
        $(document).on('click keypress', '.dlFile', function () {
            downloadFile(this);
        });
    })
    //下載檔案存為指定檔名
    function downloadFile(elem) {
        $(elem).attr('download', $(elem).attr('real-name'))
              .attr('href', $(elem).attr('url'))
              .attr('target', '_blank');
    }
</script>